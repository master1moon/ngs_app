<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/surface"
    app:strokeColor="@color/border_light"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Sale Icon -->
        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/sale_icon_background">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_sale"
                android:tint="@color/success" />

        </FrameLayout>

        <!-- Sale Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Store and Package -->
            <TextView
                android:id="@+id/tvStoreAndPackage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="المحل - الباقة"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="4dp"
                tools:text="محل أحمد - باقة الإنترنت" />

            <!-- Reason -->
            <TextView
                android:id="@+id/tvSaleReason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="سبب البيع"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="4dp"
                tools:text="بيع للعميل محمد" />

            <!-- Quantity and Price -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الكمية: 0"
                    android:textSize="12sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginEnd="16dp"
                    tools:text="الكمية: 5" />

                <TextView
                    android:id="@+id/tvPricePerUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="السعر: 0 د.ك"
                    android:textSize="12sp"
                    android:textColor="@color/text_muted"
                    tools:text="السعر: 10 د.ك" />

            </LinearLayout>

            <!-- Total Amount -->
            <TextView
                android:id="@+id/tvTotalAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 د.ك"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/success"
                android:layout_marginBottom="4dp"
                tools:text="50 د.ك" />

            <!-- Date -->
            <TextView
                android:id="@+id/tvSaleDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2024-01-01"
                android:textSize="11sp"
                android:textColor="@color/text_muted"
                tools:text="2024-01-15" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="8dp">

            <!-- Edit Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditSale"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="4dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/ic_edit"
                app:iconSize="16dp"
                app:iconTint="@color/white"
                app:backgroundTint="@color/warning"
                style="@style/Widget.Material3.Button" />

            <!-- Delete Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDeleteSale"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:insetLeft="0dp"
                android:insetTop="0dp"
                android:insetRight="0dp"
                android:insetBottom="0dp"
                app:icon="@drawable/ic_delete"
                app:iconSize="16dp"
                app:iconTint="@color/white"
                app:backgroundTint="@color/error"
                style="@style/Widget.Material3.Button" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>